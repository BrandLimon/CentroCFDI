@model IEnumerable<API.Catalogos.Proyecto>

<div class="card card-flush shadow-sm py-4">
    <!--begin::Card header-->
    <div class="card-header">
        <!--begin::Search-->
        <div class="d-flex align-items-center position-relative my-1">
            <i class="fa fa-magnifying-glass position-absolute ms-4"></i>
            <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Buscar" />
        </div>
        <!--end::Search-->
        <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
            <!--begin::Export dropdown-->
            <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                <i class="fa fa-file-export"></i>
                Exportar
            </button>
            <!--begin::Menu-->
            <div id="kt_datatable_example_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="copy">
                        Copiar a portapapeles
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="excel">
                        Exportar a Excel
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="csv">
                        Exportar a CSV
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="pdf">
                        Exportar a PDF
                    </a>
                </div>
                <!--end::Menu item-->
            </div>
            <!--end::Menu-->
            <!--end::Export dropdown-->
            <!--begin::Hide default export buttons-->
            <div id="kt_datatable_example_buttons" class="d-none"></div>
            <!--end::Hide default export buttons-->

        </div>
    </div>
    <!--end::Card header-->
    <!--begin::Card body-->
    <div class="card-body pt-0">
        <div class="d-flex flex-column gap-10">
            <table class="table align-middle rounded table-row-dashed g-5" id="kt_datatable">
                <thead>
                    <tr class="text-start text-gray-600 fw-bold fs-7 text-uppercase">
                        <th class="min-w-100px">
                            Nombre
                        </th>
                        <th class="min-w-100px">
                            Clave
                        </th>
                        <th class="min-w-100px">
                            Descripción
                        </th>
                        <th class="min-w-100px">
                            Departamento
                        </th>
                        <th class="min-w-100px">
                            Fecha Creación
                        </th>
                        <th class="min-w-100px">
                            Cuenta Contable
                        </th>
                        <th class="text-center">
                            Estatus
                        </th>
                        <th class="min-w-100px">

                        </th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr class="fs-7">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Clave)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @item.Departamento.Nombre
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CuentaContable)
                        </td>
                        <td class="text-center">
                            @switch (item.Estatus)
                            {
                                case API.Enums.c_Estatus.Activo:
                                    <span class="badge badge-light-primary">Activo</span>
                                    break;
                                case API.Enums.c_Estatus.Cerrado:
                                    <span class="badge badge-light-dark">Inactivo</span>
                                    break;
                                default:
                                    break;
                            }
                        </td>
                        <td class="text-end w-125px">
                            <!--begin::Action=-->
                            @if (User.IsInRole("EDICION") || User.IsInRole("BORRADO"))//SE LE APLICO PERMISO DEPENDIENDO A LOS TIPOS DE ROLES QUE TIENE ASIGNADO CADA USUARIO
                            {
                                <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                    Acciones <i class="fa-solid fa-chevron-down"></i>
                                </a>
                            }
                            <!--begin::Menu-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                <!--begin::Menu item-->
                                @if (User.IsInRole("EDICION"))//SE LE APLICO PERMISO DEPENDIENDO A LOS TIPOS DE ROLES QUE TIENE ASIGNADO CADA USUARIO
                                {
                                    <div class="menu-item px-3">
                                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "menu-link px-3" })
                                    </div>
                                }
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                @if (User.IsInRole("BORRADO"))//SE LE APLICO PERMISO DEPENDIENDO A LOS TIPOS DE ROLES QUE TIENE ASIGNADO CADA USUARIO
                                {
                                    <div class="menu-item px-3">
                                        @Html.ActionLink("Eliminar", "EliminarImpuesto", new { id = item.Id }, new { @class = "menu-link px-3" })
                                    </div>
                                }
                                <!--end::Menu item-->
                            </div>
                            <!--end::Menu-->
                            <!--end::Action=-->
                        </td>
                    </tr>

                }
            </table>
        </div>
    </div>
    <!--end::Card header-->
</div>


<div class="hiddenDiv">
    <div class="d-flex align-items-center py-3 py-md-1" id="tools">
        <!--begin::Button-->
        <a href="@Url.Action("Create","Proyectos")" class="btn btn-secondary">
            Nuevo
        </a>
        <!--end::Button-->

    </div>
</div>