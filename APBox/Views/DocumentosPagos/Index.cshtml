                    <input type="text" data-kt-filter-Individuales="search" class="form-control form-control-solid w-250px ps-14" placeholder="Buscar" />
                </div>
                <!--end::Search-->
                <div class="card-toolbar flex-row-fluid justify-content-end gap-5">

                </div>
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                <div class="d-flex flex-column gap-10">
                    <table class="table align-middle rounded table-row-dashed fs-7 g-5" id="tablaIndividuales">
                        <thead>
                            <tr class="text-start text-gray-600 fw-bold fs-7 text-uppercase">
                                <th class="w-100px">Socio Comercial</th>
                                <th>Identificador</th>
                                <th>Datos de Recepción</th>
                                <th class="text-end">Monto</th>
                                <th class="text-center">Referencia</th>
                                <th class="text-center">Estado<br />Pago</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="align-text-top">

                            @foreach (var item in Model.DocumentosRecibidos)
                            {
                                var aprobacion = item.AprobacionesDR;

                                ViewBag.usuarioEntrega = AcondicionarUsuarios.ObtenerNombreCompleto((Int32)aprobacion.UsuarioEntrega_Id);

                                var departamentoUsuarioSolicitante = _db.Departamentos.Find(aprobacion.DepartamentoUsuarioSolicitante_Id);
                                var nombreDepartamento = departamentoUsuarioSolicitante != null ? departamentoUsuarioSolicitante.Nombre : "Departamento no encontrado";
                                ViewBag.nombreDepartamento = nombreDepartamento;
                                ViewBag.usuarioAprobador = AcondicionarUsuarios.ObtenerNombreCompleto(aprobacion.UsuarioAprobacionComercial_id);

                                string pdfCfdi = null;

                                if (item.RecibidosPdf != null && item.RecibidosPdf.Id != 0)
                                {
                                    pdfCfdi = Url.Action("GetPDF", "DocumentosRecibidos", new { id = item.RecibidosPdf.Id });
                                }

                                string pdfAdjunto = null;

                                if (item.AdjuntosId != null)
                                {
                                    pdfAdjunto = Url.Action("GetPDFAdjunto", "DocumentosRecibidos", new { id = item.AdjuntosId });
                                }

                                <tr>
                                    <td>

                                        @switch (item.TipoDocumentoRecibido)
                                        {
                                            case API.Enums.c_TipoDocumentoRecibido.CFDI:
                                                @item.SocioComercial.RazonSocial <br />
                                                <span class="text-gray-600">@item.SocioComercial.Rfc</span>
                                                break;
                                            case API.Enums.c_TipoDocumentoRecibido.ComprobanteNoFiscal:
                                                @Html.Raw("Sin Socio Comercial");
                                                break;
                                            case API.Enums.c_TipoDocumentoRecibido.ComprobanteExtranjero:
                                                break;
                                            default:
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @switch (item.TipoDocumentoRecibido)
                                        {
                                            case API.Enums.c_TipoDocumentoRecibido.CFDI:

                                                string sf = "";
                                                if (item.CfdiRecibidosSerie != null)
                                                {
                                                    sf = String.Format("{0} - {1}", item.CfdiRecibidosSerie, item.CfdiRecibidosFolio);
                                                }
                                                else
                                                {
                                                    sf = item.CfdiRecibidosFolio;
                                                }

                                                @sf <br />

                                                <span class="text-gray-600">@item.CfdiRecibidosUUID</span> <br />

                                                <i class="ki-duotone ki-calendar text-gray-800 fs-3">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i><span class="text-gray-600">@item.FechaComprobante.ToString("dd/MM/yyyy")</span>

                                                break;
                                            case API.Enums.c_TipoDocumentoRecibido.ComprobanteNoFiscal:
                                                <strong>Comprobante No Fiscal</strong> <br />
                                                <span>Sin Identificador</span>
                                                break;
                                            case API.Enums.c_TipoDocumentoRecibido.ComprobanteExtranjero:
                                                <strong>Comprobante No Fiscal</strong> <br />
                                                <span>Sin Identificador</span>
                                                break;
                                            default:
                                                break;
                                        }
                                    </td>
                                    <td>

                                        <strong>Aprobación:</strong> <br /> @ViewBag.usuarioAprobador <br />

                                        <i class="ki-duotone ki-tablet-text-up text-gray-800 fs-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <span class="text-gray-600">@ViewBag.nombreDepartamento</span><br />

                                        <i class="ki-duotone ki-calendar text-gray-800 fs-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i> <span class="text-gray-600">@item.AprobacionesDR.FechaAprobacionComercial.Value.ToString("dd/MM/yyyy")</span><br />
                                        <div class="separator"></div>

                                        <strong>Entrega:</strong> <br /> @ViewBag.usuarioEntrega <br />
                                        <i class="ki-duotone ki-calendar text-gray-800 fs-3">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i> <span class="text-gray-600">@item.AprobacionesDR.FechaSolicitud.Value.ToString("dd/MM/yyyy")</span><br />


                                        @if (item.ComprobacionGastoId != null)
                                        {
                                            string compGast = String.Format("{0} - {1}", item.ComprobacionesGastos.Clave, item.ComprobacionesGastos.Folio);
                                            <br /> <strong>Comp Gastos: </strong>
                                            <br /><span class="text-gray-600">@Html.Raw(compGast)</span><br />
                                        }

                                    </td>
                                    <td class="text-end">
                                        @item.Monto.ToString("c") <br />
                                        <div class="text-gray-600">@item.MonedaId</div> <br />
                                    </td>
                                    <td>
                                        @item.Referencia
                                    </td>
                                    <td class="text-center" id="estado-@item.Id">
                                        <div class="d-flex justify-content-center">
                                            @switch (item.EstadoPago)
                                            {
                                                case API.Enums.c_EstadoPago.EnRevision:
                                                    <div data-bs-toggle="tooltip"
                                                         data-bs-placement="top"
                                                         data-bs-trigger="hover focus"
                                                         data-bs-original-title="En Revisión">
                                                        <button type="button" class="btn btn-icon">
                                                            <i class="ki-duotone ki-file-right text-primary fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                                        </button>
                                                    </div>

                                                    break;
                                                case API.Enums.c_EstadoPago.Aprobado:
                                                    <div data-bs-toggle="tooltip"
                                                         data-bs-placement="top"
                                                         data-bs-trigger="hover focus"
                                                         data-bs-original-title="Aprobado">
                                                        <button type="button" class="btn btn-icon">
                                                            <i class="ki-duotone ki-file-added text-success fs-1"><span class="path1"></span><span class="path2"></span></i>
                                                        </button>
                                                    </div>

                                                    break;
                                                case API.Enums.c_EstadoPago.Rechazado:
                                                    <div data-bs-toggle="tooltip"
                                                         data-bs-placement="top"
                                                         data-bs-trigger="hover focus"
                                                         data-bs-original-title="Rechazado">
                                                        <button type="button" class="btn btn-icon">
                                                            <i class="ki-duotone ki-file-deleted text-danger fs-1"><span class="path1"></span><span class="path2"></span></i>
                                                        </button>
                                                    </div>

                                                    break;
                                                case API.Enums.c_EstadoPago.Pagado:
                                                    <div data-bs-toggle="tooltip"
                                                         data-bs-placement="top"
                                                         data-bs-trigger="hover focus"
                                                         data-bs-original-title="Pagado">
                                                        <button type="button" class="btn btn-icon">
                                                            <i class="ki-duotone ki-bill text-info fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span></i>
                                                        </button>
                                                    </div>

                                                    break;
                                                case API.Enums.c_EstadoPago.Completado:
                                                    <div data-bs-toggle="tooltip"
                                                         data-bs-placement="top"
                                                         data-bs-trigger="hover focus"
                                                         data-bs-original-title="Completado">
                                                        <button type="button" class="btn btn-icon">
                                                            <i class="ki-duotone ki-questionnaire-tablet text-dark fs-1"><span class="path1"></span><span class="path2"></span></i>
                                                        </button>
                                                    </div>

                                                    break;
                                                default:

                                                    break;
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">

                                            @if (item.EstadoPago == API.Enums.c_EstadoPago.EnRevision)
                                            {
                                                ViewBag.ClasesEstadoPago = "btn-color-gray-800 btn-active-color-success";
                                                ViewBag.TooltipEstadoPago = "Aprobar";
                                            }
                                            else
                                            {
                                                ViewBag.ClasesEstadoPago = "btn-color-gray-500 disabled";
                                                ViewBag.TooltipEstadoPago = "-";
                                            }
                                            <div data-bs-toggle="tooltip"
                                                 data-bs-placement="top"
                                                 data-bs-trigger="hover focus"
                                                 data-bs-original-title="@ViewBag.TooltipEstadoPago">
                                                <button type="button" class="btn btn-icon @ViewBag.ClasesEstadoPago aprobar"
                                                        data-id="@item.Id">
                                                    <i class="ki-duotone ki-check-square fs-1">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                </button>
                                            </div>

                                            @if (pdfCfdi != null)
                                            {
                                                ViewBag.ClasesPdfCfdi = "btn-color-gray-800 btn-active-color-success";
                                                ViewBag.TooltipPdfCfdi = "PDF CFDI";
                                            }
                                            else
                                            {
                                                ViewBag.ClasesPdfCfdi = "btn-color-gray-500 disabled";
                                                ViewBag.TooltipPdfCfdi = "Sin Archivos";
                                            }
                                            <div data-bs-toggle="tooltip"
                                                 data-bs-placement="top"
                                                 data-bs-trigger="hover focus"
                                                 data-bs-original-title="@ViewBag.TooltipPdfCfdi"
                                                 data-pdf-url="@pdfCfdi"
                                                 onclick="embedPDF(this.getAttribute('data-pdf-url'),'#pdf-container1'); return false;">
                                                <button type="button" class="btn btn-icon @ViewBag.ClasesPdfCfdi text-hover-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#pdfCfdi">
                                                    <i class="ki-duotone ki-tablet-book fs-1">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                    </i>
                                                </button>
                                            </div>

                                            @if (pdfAdjunto != null)
                                            {
                                                ViewBag.ClasesPdfAdjunto = "btn-color-gray-800 btn-active-color-success";
                                                ViewBag.TooltipPdfAdjunto = "PDF Adjuntos";
                                            }
                                            else
                                            {
                                                ViewBag.ClasesPdfAdjunto = "btn-color-gray-500 disabled";
                                                ViewBag.TooltipPdfAdjunto = "Sin Archivos";
                                            }
                                            <div data-bs-toggle="tooltip"
                                                 data-bs-placement="top"
                                                 data-bs-trigger="hover focus"
                                                 data-bs-original-title="@ViewBag.TooltipPdfAdjunto"
                                                 data-pdf-url="@pdfAdjunto"
                                                 onclick="embedPDF(this.getAttribute('data-pdf-url'),'#pdf-container2'); return false;">
                                                <button type="button" class="btn btn-icon @ViewBag.ClasesPdfAdjunto text-hover-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#pdfAdjuntos">
                                                    <i class="ki-duotone ki-clipboard fs-1">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                    </i>
                                                </button>
                                            </div>

                                            <div data-bs-toggle="tooltip"
                                                 data-bs-placement="top"
                                                 data-bs-trigger="hover focus"
                                                 data-bs-original-title="Acciones">
                                                <button type="button" class="btn btn-icon btn-color-gray-800 text-hover-primary"
                                                        data-kt-menu-trigger="click"
                                                        data-kt-menu-placement="bottom-end">
                                                    <i class="ki-duotone ki-dots-square fs-1">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                        <span class="path4"></span>
                                                    </i>
                                                </button>

                                                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-175px py-4" data-kt-menu="true" style="">
                                                    <div class="menu-item px-3">@Html.ActionLink("Revisión", "Revision", new { id = item.Id }, new { @class = "menu-link px-3" })</div>
                                                    @switch (item.TipoDocumentoRecibido)
                                                    {
                                                        case API.Enums.c_TipoDocumentoRecibido.CFDI:
                                                            <div class="menu-item px-3">@Html.ActionLink("Descarga Xml", "DescargaXml", new { id = item.Id }, new { @class = "menu-link px-3" })</div>
                                                            <div class="menu-item px-3">@Html.ActionLink("Descarga Pdf", "DescargaPDF", new { id = item.Id }, new { @class = "menu-link px-3" })</div>
                                                            break;
                                                        case API.Enums.c_TipoDocumentoRecibido.ComprobanteNoFiscal:
                                                            <div class="menu-item px-3">@Html.ActionLink("Download", "DescargaComprobanteNoFiscal", new { id = item.Id }, new { @class = "menu-link px-3" })</div>
                                                            break;
                                                        case API.Enums.c_TipoDocumentoRecibido.ComprobanteExtranjero:
                                                            break;
                                                        default:
                                                            break;
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!--end::Card header-->
        </div>
    </div>
</div>

