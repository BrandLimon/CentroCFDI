<script>
$(document).ready(function() {
    $(".aprobar").click(function() {
        var id = $(this).data("id");
        var button = $(this);

            $.ajax({
            type: "POST",
            url: '@Url.Action("AprobarDocumento", "DocumentosPagos")',
            data: { id: id },
            success: function(response) {
                if (response.success) {
                    // Actualiza el estado en la vista
                    var estadoBadge = "";

                    switch (response.estado) {
                        case "Aprobado":
                            estadoBadge = '<div data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-original-title="Aprobado"><button type="button" class="btn btn-icon"><i class="ki-duotone ki-file-added text-success fs-1"><span class="path1" /><span class="path2" /></i></button></div>';
                            break;
                        case "EnRevision":
                            estadoBadge = '<div data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-original-title="En Revisión"><button type="button" class="btn btn-icon"><i class="ki-duotone ki-file-right text-primary fs-1"><span class="path1" /><span class="path2" /><span class="path3" /></i></button></div>';
                            break;
                        case "Rechazado":
                            estadoBadge = '<div data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-original-title="Rechazado"><button type="button" class="btn btn-icon"><i class="ki-duotone ki-file-deleted text-danger fs-1"><span class="path1" /><span class="path2" /></i></button></div>';
                            break;
                        case "Pagado":
                            estadoBadge = '<div data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-original-title="Pagado"><button type="button" class="btn btn-icon"><i class="ki-duotone ki-bill text-info fs-1"><span class="path1" /><span class="path2" /></i></button></div>';
                            break;
                        case "Completado":
                            estadoBadge = '<div data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover focus" data-bs-original-title="Completado"><button type="button" class="btn btn-icon"><i class="ki-duotone ki-questionnaire-tablet text-dark fs-1"><span class="path1" /><span class="path2" /></i></button></div>';
                            break;
                        default:
                            break;
                    }

                    $("#estado-" + id).html(estadoBadge);
                    // Opcional: Deshabilita el botón o cámbialo a un estado aprobado
                    button.prop("disabled", true);
                } else {
                    alert("Error al aprobar el documento.");
                }
            },
            error: function() {
                alert("Error en la llamada AJAX.");
            }
        });
    });

    var pdfUrl = '';
    var recipiente = '';
    function embedPDF(url, cont) {
        pdfUrl = url;
        recipiente = cont
        if (typeof PDFObject !== 'undefined' && pdfUrl) {
            PDFObject.embed(pdfUrl, recipiente);
        } else {
            console.error("La biblioteca PDFObject no está cargada o la URL del PDF no está definida.");
        }
    }

    $('#pdfCfdi').on('shown.bs.modal', function () {
        if (pdfUrl) {
            PDFObject.embed(pdfUrl, recipiente);
        }
    });

    $('#pdfCfdi').on('hide.bs.modal', function () {
        $(recipiente).empty();
    });

    $('#pdfAdjuntos').on('shown.bs.modal', function () {
        if (pdfUrl) {
            PDFObject.embed(pdfUrl, recipiente);
        }
    });

    $('#pdfAdjuntos').on('hide.bs.modal', function () {
        $(recipiente).empty();
    });

});
</script>