@model API.Models.DocumentosPagos.DocumentosPagosModel

@{
    ViewBag.Title = "Cargar Layout";
}


<div class="card card-flush">
    <!--begin::Card header-->
    <div class="card-header">
        <div class="card-title">
            <p>Descarga y llena el layout</p>
        </div>
        <div class="card-title d-flex justify-content-end">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Exportar", "DocumentosPagos")'">
                <span class="indicator-label">Descargar Layout Vacío</span>

            </button>
        </div>
    </div>
    <!--end::Card header-->
    <div class="card-body pt-0">
        <div class="row">
            @using (Html.BeginForm("CargaLayout", "DocumentosPagos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "label-blue-alt", @style = "color:red;" })
            <div class="row">
                <div class="form-group col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    @Html.LabelFor(model => model.Previsualizacion, htmlAttributes: new { @class = "form-label" })
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Previsualizacion, new { htmlAttributes = new { @class = "form-check-input" } })
                        @Html.ValidationMessageFor(model => model.Previsualizacion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <label class="control-label" for="Grupos">Seleccionar Layout</label>
                    <input class="file-input" type="file" name="Archivo" typeof="Archivo" accept=".csv, .dat" />
                </div>
            </div>
                <div class="clearfix"></div>
                <div class="separator my-5"></div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <span class="indicator-label">Procesar</span>
                    </button>
                </div>
                 if (Model.Pagos != null && Model.Pagos.Count > 0)
                    {
                    var i = 0;
                    <div class="clearfix"></div>

                    <div class="alert alert-notice">
                        <div class="bg-blue alert-icon">
                            <i class="glyph-icon icon-check-square"></i>
                        </div>
                        <div class="alert-content">
                            <h4 class="alert-title">Detalles de la previsualización</h4>
                        </div>
                    </div>

                    foreach (var pago in Model.Pagos)
                        {
                        i++;
                        <div class="card shadow-sm">
                            <div class="card-header">
                                <h3 class="card-title">
                                    Complemento de Pagos - @i
                                </h3>
                            </div>
                            <div class="card-body">

                                <table class="table">
                                    <tr>
                                        <th colspan="4"><b>Información de CFDi</b></th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Receptor</b> <br />
                                            @pago.DocumentoRecibido.SocioComercial.RazonSocial
                                        </td>
                                        <td>
                                            <b>Receptor</b> <br />
                                            @pago.DocumentoRecibido.SocioComercial.RazonSocial
                                        </td>
                                        <td>
                                            <b>Fecha de Emisión</b> <br />
                                            @pago.FechaPago.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                           
                                        </td>
                                    </tr>
                                </table>

                                        <table>
                                            <tr>
                                                <th colspan="4">
                                                    <b>Pago - @i</b>
                                                </th>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>Fecha del Pago</b><br />
                                                    @pago.FechaPago.ToString("dd/MM/yyyy")
                                                </td>
                                                <td>
                                                    <b>Moneda</b><br />
                                                    @pago.Moneda
                                                </td>
                                                <td>
                                                    <b>Total</b><br />
                                                    @pago.Total.ToString("c")
                                                </td>
                                                <td>
                                                    <b>Cuenta Bancaria</b><br />
                                                    @if (pago.BancoSucursal != null)
                                                    {
                                                        @Html.Raw(pago.BancoSucursal.Nombre);
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("Sin Definir");
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>Tipo de Cambio</b><br />
                                                    @pago.TipoCambio
                                                </td>
                                                <td>
                                                    <b>Referencia Bancaria</b><br />
                                                    @pago.ReferenciaBancaria
                                                </td>
                                                <td>
                                                    <b>Referencia ERP</b><br />
                                                    @pago.ReferenciaERP
                                                </td>
                                                <td>
                                                    
                                                </td>
                                            </tr>
                                        </table>


                                        @if (pago.DocumentosPagados != null && pago.DocumentosPagados.Count > 0)
                                            {
                                            var h = 0;

                                            foreach (var documentoPagado in pago.DocumentosPagados)
                                                {
                                                h++;
                                                <table>
                                                    <tr>
                                                        <th colspan="5">
                                                            Documento Relacionado Pago - @h
                                                        </th>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <b>Factura - Serie / Folio</b><br />
                                                            @documentoPagado.Serie / @documentoPagado.Folio
                                                        </td>
                                                        <td>
                                                            <b>UUID</b><br />
                                                            @documentoPagado.UUID
                                                        </td>
                                                        
                                                        <td>
                                                            <b>Moneda</b><br />
                                                            @documentoPagado.Moneda
                                                        </td>
                                                        <td>
                                                            <b>Importe Pagado</b><br />
                                                            @documentoPagado.Total.Value.ToString("c")
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <b>Tipo de Cambio</b><br />
                                                            @documentoPagado.TipoCambio
                                                        </td>
                                                        <td>
                                                            <b>Metodo Pago</b><br />
                                                            @documentoPagado.MetodoPago
                                                        </td>
                                                        <td>
                                                            <b>Forma de Pago</b><br />
                                                            @documentoPagado.FormaPago
                                                        </td>
                                                        <td>
                                                        </td>
                                                    </tr>
                                                  </table>

                                                }
                                            }
                            </div>
                        </div>
                        }
                    }
                
                }
        </div>
    </div>
</div>
