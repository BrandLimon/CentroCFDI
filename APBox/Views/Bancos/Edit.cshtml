@model API.Catalogos.Banco

@{
    ViewBag.Title = "Editar";
}

<div class="card card-flush py-4">
    <div class="card-header">
        <div class="card-title">
            <h2>@ViewBag.title</h2>
        </div>
    </div>

        <div class="card-body pt-0">
           
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.Id)
            <div class="form">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        @Html.LabelFor(model => model.RazonSocial, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.RazonSocial, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RazonSocial, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-xs-12 col-sm-4 col-md-4 col-lg-4 mt-5">
                        @Html.LabelFor(model => model.Rfc, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Rfc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rfc, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-xs-12 col-sm-4 col-md-4 col-lg-4 mt-5">
                        @Html.LabelFor(model => model.Nacional, htmlAttributes: new { @class = "form-label" })
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Nacional, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(model => model.Nacional, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-xs-12 col-sm-4 col-md-4 col-lg-4 mt-5">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "form-label" })
                        @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-flex justify-content-end mt-10">
                        <div class="form-group">
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-light me-5" })
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                    </div>
                </div>
                </div>
                }
         
      </div>
</div>