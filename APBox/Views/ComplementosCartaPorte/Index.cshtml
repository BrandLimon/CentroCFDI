@model API.Models.Operaciones.ComplementosCartaPorteModel

@{
    ViewBag.Title = "Complementos de Carta Porte";
}

@if (User.IsInRole("COMPLEMENTOCARTAPORTE"))
{
    <div class="card card-flush shadow-sm py-4">
        <!--begin::Card header-->
        <div class="card-header">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <i class="fa fa-magnifying-glass position-absolute ms-4"></i>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Buscar" />
            </div>
            <!--end::Search-->
            <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
                <!--begin::Export dropdown-->
                <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                    <i class="fa fa-file-export"></i>
                    Exportar
                </button>
                <!--begin::Menu-->
                <div id="kt_datatable_example_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-export="copy">
                            Copiar a portapapeles
                        </a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-export="excel">
                            Exportar a Excel
                        </a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-export="csv">
                            Exportar a CSV
                        </a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-export="pdf">
                            Exportar a PDF
                        </a>
                    </div>
                    <!--end::Menu item-->
                </div>
                <!--end::Menu-->
                <!--end::Export dropdown-->
                <!--begin::Hide default export buttons-->
                <div id="kt_datatable_example_buttons" class="d-none"></div>
                <!--end::Hide default export buttons-->

            </div>
        </div>
        <!--end::Card header-->
        <!--begin::Card body-->
        <div class="card-body pt-0">
            <div class="d-flex flex-column gap-10">
                <table class="table align-middle rounded table-row-dashed fs-6 g-5" id="kt_datatable">
                    <thead>
                        <tr class="text-start text-gray-600 fw-bold fs-7 text-uppercase">
                            <th class="min-w-100px">
                                Socio Comercial
                            </th>
                            <th class="min-w-100px">
                                Identificador
                            </th>
                            <th class="min-w-100px">
                                Fecha
                            </th>
                            <th class="min-w-100px">
                                Datos de Complemento
                            </th>
                            <th class="min-w-100px">
                                Datos CFDI
                            </th>
                            <th class="min-w-100px">
                                Estado
                            </th>
                            <th class="min-w-100px">

                            </th>
                        </tr>
                    </thead>

                    @for (int i = 0; i < Model.ComplementosCartaPorte.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Receptor.RazonSocial) <br />
                                <span class="text-gray-500 fs-6">@Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Receptor.Rfc) </span>
                            </td>
                            <td>
                                @if (Model.ComplementosCartaPorte[i].FacturaEmitida != null)
                                {
                                    @Model.ComplementosCartaPorte[i].FacturaEmitida.Serie; @Html.Raw(" - ") @Model.ComplementosCartaPorte[i].FacturaEmitida.Folio;
                                    <br />
                                    <span class="text-gray-500 fs-6">
                                        @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].FacturaEmitida.Uuid);
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-500 fs-6"> @Html.Raw("Sin asignar")</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].FechaDocumento)
                            </td>
                            <td>
                                @if (Model.ComplementosCartaPorte[i].ClaveTransporteId == "01")
                                {
                                    @Html.Raw("AutoTransporte")
                                }
                                else if (Model.ComplementosCartaPorte[i].ClaveTransporteId == "02")
                                {
                                    @Html.Raw("Transporte Maritimo")
                                }
                                else if (Model.ComplementosCartaPorte[i].ClaveTransporteId == "03")
                                {
                                    @Html.Raw("Transporte Aereo")
                                }
                                else if (Model.ComplementosCartaPorte[i].ClaveTransporteId == "04")
                                {
                                    @Html.Raw("Transporte Ferroviario")
                                }
                                else if (Model.ComplementosCartaPorte[i].ClaveTransporteId == "05")
                                {
                                    @Html.Raw("Ducto")
                                }
                                <br />

                                @if (Model.ComplementosCartaPorte[i].Ubicaciones != null)
                                {
                                    for (int x = 0; x < Model.ComplementosCartaPorte[i].Ubicaciones.Count(); x++)
                                    {
                                        if (Model.ComplementosCartaPorte[i].Ubicaciones[x].TipoUbicacion.Equals("Origen"))
                                        {
                                            <span class="badge">
                                                @Html.Raw("Origen: ")
                                            </span>
                                            <span class="text-gray-500 badge">
                                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Ubicaciones[x].Domicilio.Pais)
                                                @Html.Raw(" - ")
                                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Ubicaciones[x].Domicilio.Estado)
                                                @Html.Raw(" - ")
                                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Ubicaciones[x].NombreRemitenteDestinatario)
                                            </span>
                                            <br />
                                        }
                                        else
                                        {
                                            <span class="badge">
                                                @Html.Raw("Destino")
                                            </span>
                                            <span class="text-gray-500 badge">
                                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Ubicaciones[x].Domicilio.Pais)
                                                @Html.Raw(" - ")
                                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Ubicaciones[x].Domicilio.Estado)
                                                @Html.Raw(" - ")
                                                @Html.DisplayFor(model => Model.ComplementosCartaPorte[i].Ubicaciones[x].NombreRemitenteDestinatario)
                                            </span>
                                        }

                                    }

                                }
                            </td>
                            <td>
                                @if (Model.ComplementosCartaPorte[i].TipoDeComprobante == API.Enums.c_TipoDeComprobante.I)
                                {
                                    @Html.Raw("Ingreso") <br />
                                    @Model.ComplementosCartaPorte[i].Total.ToString("C") <br />
                                    <div class="text-gray-500 fs-6">@Model.ComplementosCartaPorte[i].Moneda</div>
                                }
                                @if (Model.ComplementosCartaPorte[i].TipoDeComprobante == API.Enums.c_TipoDeComprobante.T)
                                {
                                    @Html.Raw("Traslado")
                                }
                            </td>
                            <td>
                                @if (Model.ComplementosCartaPorte[i].Generado == true)
                                {
                                    if (Model.ComplementosCartaPorte[i].Status == API.Enums.Status.Activo)
                                    {
                                        <div class="badge badge-light-success">Generado</div>
                                    }
                                    else
                                    {
                                        <div class="badge badge-light-danger">Cancelado</div> }
                                }
                                else
                                {
                                    <div class="badge badge-light-info">Pendiente</div>
                                }
                            </td>
                            <td class="text-end">
                                <!--begin::Action=-->
                                <a href="#" class="btn btn-sm btn-light btn-flex btn-center btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                    Acciones
                                    <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                </a>
                                <!--begin::Menu-->
                                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 py-4 w-auto" data-kt-menu="true">
                                    @if (Model.ComplementosCartaPorte[i].Generado)
                                    {
                                        if (Model.ComplementosCartaPorte[i].Status == API.Enums.Status.Activo)
                                        {
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">@Html.ActionLink("XML", "DescargarXml", new { id = Model.ComplementosCartaPorte[i].Id }, new { @class = "menu-link px-3" })</div>
                                            <div class="menu-item px-3">@Html.ActionLink("PDF", "DescargarPDF", new { id = Model.ComplementosCartaPorte[i].Id }, new { @class = "menu-link px-3" })</div>
                                            <div class="menu-item px-3"><div class="menu-link px-3 dcancelar" data-id="@Model.ComplementosCartaPorte[i].Id">Cancelar</div></div>
                                            <!--end::Menu item-->

                                        }
                                        else
                                        {
                                            <!--begin::Menu item-->
                                            <div class="menu-item px-3">@Html.ActionLink("Acuse", "DescargarAcuse", new { id = Model.ComplementosCartaPorte[i].Id }, new { @class = "menu-link px-3" })</div>
                                            <!--end::Menu item-->
                                        }
                                    }
                                    else
                                    {
                                        <!--begin::Menu item-->
                                        if (User.IsInRole("EDICION"))//SE LE APLICO PERMISO DEPENDIENDO A LOS TIPOS DE ROLES QUE TIENE ASIGNADO CADA USUARIO
                                        {
                                            <div class="menu-item px-3">@Html.ActionLink("Editar", "Edit", new { id = Model.ComplementosCartaPorte[i].Id }, new { @class = "menu-link px-3" })</div>
                                        }
                                        <div class="menu-item px-3">@Html.ActionLink("Generar", "Generar", new { id = Model.ComplementosCartaPorte[i].Id }, new { @class = "menu-link px-3" })</div>
                                        if (User.IsInRole("BORRADO"))//SE LE APLICO PERMISO DEPENDIENDO A LOS TIPOS DE ROLES QUE TIENE ASIGNADO CADA USUARIO
                                        {
                                            <div class="menu-item px-3">@Html.ActionLink("Eliminar", "Delete", new { id = Model.ComplementosCartaPorte[i].Id }, new { onclick = "return confirm('¿Estás seguro de elminar el complemento?');", @class = "menu-link px-3" })</div>
                                        }
                                        <!--end::Menu item-->
                                    }
                                </div>
                                <!--end::Menu-->
                                <!--end::Action=-->
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <!--end::Card header-->
    </div>

    <script>
     //activa modal cancelar carta porte
    $(function () {
        var cancelarModal = $('#cancelar-view');
        $(".dcancelar").on("click", function () {
            var Id = $(this).attr("data-id");
            var url = "@Url.Action("Cancelar", "ComplementosCartaPorte")/" + Id;
            $.get(url).done(function (data) {
                cancelarModal.html(data);
                cancelarModal.find('.modal').modal('show');
            })

        })

        cancelarModal.on('click', '#submit-cancelar', function (event) {
            var form = $(this).parents('.modal').find('form');
            var actionUrl = form.attr('action');
            var url =  "@Url.Action("Cancelar", "ComplementosCartaPorte")/"
            var sendData = form.serialize();
            $.post(url, sendData).done(function (data) {
                cancelarModal.find('.modal').modal('hide');
                ValidaEntradaModal();
               cancelarModal.html(data);
                cancelarModal.find('.modal').modal('show');

            })
        })

        cancelarModal.on('click', '#close-modal', function(event){
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
            var form = $(this).parents('.modal').find('form');
            var messageError = form.attr('error-data');
            var messageSuccess = form.attr('success-data');
            if (messageError == undefined && messageSuccess != undefined) {
                window.location.href = "/ComplementosCartaPorte"
            }

        })
         function ValidaEntradaModal() {
            $('body').removeClass('modal-open');
            $('.modal-backdrop').remove();
        }

    });
    </script>


    <div class="hiddenDiv">
        <div class="d-flex align-items-center py-3 py-md-1" id="tools">
            <!--begin::Wrapper-->
            <div class="me-4">
                <!--begin::Menu-->
                <a href="#" class="btn btn-custom btn-active-white btn-flex btn-color-white btn-active-color-white" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                    <i class="ki-duotone ki-filter fs-5 me-1"><span class="path1"></span><span class="path2"></span></i>
                    Filtros
                </a>
                <!--begin::Menu 1-->
                <div class="menu menu-sub menu-sub-dropdown mw-100" data-kt-menu="true">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })
                        <!--begin::Header-->
                        <div class="px-7 py-5">
                            <div class="fs-5 text-gray-900 fw-bold">Opciones</div>
                        </div>
                        <!--end::Header-->
                        <!--begin::Menu separator-->
                        <div class="separator border-gray-200"></div>
                        <!--end::Menu separator-->
                        <!--begin::Form-->
                        <div class="px-7 py-5">
                            <!--begin::Input group-->
                            <div class="mb-10">
                                <!--begin::Label-->
                                <label class="form-label fw-semibold">Periodo:</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <div class="mb-3">
                                    @Html.EditorFor(model => model.FechaInicial, new { htmlAttributes = new { @class = "form-control fecha mb-2" } })
                                </div>
                                <div class="mb-3">
                                    @Html.EditorFor(model => model.FechaFinal, new { htmlAttributes = new { @class = "form-control fecha mb-2" } })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.TipoDeComprobante, htmlAttributes: new { @class = "form-label" })
                                    @Html.DropDownListFor(model => model.TipoDeComprobante, (IEnumerable<SelectListItem>)ViewBag.TipoDeComprobante, "Todas", new { @class = "form-select mb-2" })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ClaveTransporteId, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.ClaveTransporteId, (IEnumerable<SelectListItem>)ViewBag.ClavesTransporte, "Todas", new { @class = "form-select mb-2" })

                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.Estatus, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.Estatus, (IEnumerable<SelectListItem>)ViewBag.StatusCP, "Todas", new { @class = "form-control" })

                                </div>

                                <!--end::Input-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Actions-->
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-sm btn-primary" data-kt-menu-dismiss="true">Aplicar</button>
                            </div>
                            <!--end::Actions-->
                        </div>
                        <!--end::Form-->
                    }
                </div>
                <!--end::Menu 1-->
                <!--end::Menu-->
            </div>
            <!--end::Wrapper-->
            <!--begin::Button-->
            <a href="@Url.Action("Create","ComplementosCartaPorte")" class="btn btn-secondary">
                Nuevo
            </a>
            <!--end::Button-->
        </div>
    </div>


}