    var sucursal = _db.Sucursales.Find(Convert.ToInt32(Session["SucursalId"]));
    var q = Request.Params["q"];

    switch (q)
    {
        case "miscomprobantes":
            ViewBag.Titulo = "Mis Comprobantes enviados";
            ViewBag.Descripcion = "Comprobantes entregados desde tu cuenta";
            ViewBag.MisComprobantes = true;
            break;
        case "autorizarcomprobantes":
            ViewBag.Titulo = "Autorizar Comprobantes";
            ViewBag.Descripcion = "Comprobados entregados por terceros esperando aprobación";
            ViewBag.AutorizarComprobantes = true;
            break;
        case "todoscomprobantes":
            ViewBag.Titulo = "Comprobantes Recibidos";
            ViewBag.Descripcion = "Listado de todos los comprobantes de la empresa";
            ViewBag.TodosComprobantes = true;
            break;
        default:
            break;
    }

}

