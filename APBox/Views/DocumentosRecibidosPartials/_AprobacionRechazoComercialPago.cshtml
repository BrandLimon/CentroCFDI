                                        @Html.EditorFor(model => model.AprobacionesDR.DetalleRechazo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.AprobacionesDR.DetalleRechazo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--end::Option-->
                            </div>
                            <!--end::Heading-->
                        </div>
                    </div>
                    <!--end::Ticket view-->
                </div>
                <!--end::Content-->
            </div>
        </div>
        <!--end::Body-->
    </div>
    <!--end::List Widget 7-->
</div>


<script>
$(document).ready(function () {
    // Leer los valores de los estados desde el modelo
    var estadoComercial = '@Model.EstadoComercial';
    var estadoPago = '@Model.EstadoPago';

    // Activar los inputs correspondientes basados en los estados
    switch (estadoComercial) {
        case 'EnRevision':
            $('#EnRevisionComercial').prop('checked', true);
            break;
        case 'Aprobado':
            $('#AprobadoComercial').prop('checked', true);
            break;
        case 'Rechazado':
            $('#RechazadoComercial').prop('checked', true);
            break;
        default:
            break;
    }

    switch (estadoPago) {
        case 'EnRevision':
            $('#EnRevisionPago').prop('checked', true);
            break;
        case 'Aprobado':
            $('#AprobadoPago').prop('checked', true);
            break;
        case 'Rechazado':
            $('#RechazadoPago').prop('checked', true);
            break;
        default:
            break;
    }
});

</script>



