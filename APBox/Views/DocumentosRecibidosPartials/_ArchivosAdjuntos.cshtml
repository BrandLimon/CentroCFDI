@model API.Operaciones.OperacionesProveedores.DocumentoRecibido

@{ 
    if (Model.RecibidosXml != null)
    {
        ViewBag.DescargaXml = Url.Action("DescargaXml", new { id = Model.Id });
        ViewBag.LeyendaXml = "Descarga Disponible";

    }
    else
    {
        ViewBag.DescargaXml = "#";
        ViewBag.LeyendaXml = "Descarga No Disponible";
        ViewBag.ClaseDeshabilitarXml = "bg-secondary";
    }

    if (Model.RecibidosPdf != null)
    {
        ViewBag.DescargaPdf = Url.Action("DescargaPdf", new { id = Model.Id });
        ViewBag.LeyendaPdf = "Descarga Disponible";
    }
    else
    {
        ViewBag.DescargaPdf = "#";
        ViewBag.LeyendaPdf = "Descarga No Disponible";
        ViewBag.ClaseDeshabilitarPdf = "bg-secondary";
    }

    if (Model.AdjuntosId.HasValue)
    {
        ViewBag.DescargaAdjuntos = Url.Action("DescargaAdjuntos", new { id = Model.Id });
        ViewBag.LeyendaAdjuntos = "Descarga Disponible";
    }
    else
    {
        ViewBag.DescargaAdjuntos = "#";
        ViewBag.LeyendaAdjuntos = "Descarga No Disponible";
        ViewBag.ClaseDeshabilitarAdjuntos = "bg-secondary";
    }
}

<!--begin::Col-->
<div class="col-md-6 col-lg-4 col-xl-3">
    <!--begin::Card-->
    <div class="card h-100 @ViewBag.ClaseDeshabilitarXml">
        <!--begin::Card body-->
        <div class="card-body d-flex justify-content-center text-center flex-column p-8">
            <!--begin::Name-->
            <a href="@ViewBag.DescargaXml" class="text-gray-800 text-hover-primary d-flex flex-column">
                <!--begin::Image-->
                <div class="symbol symbol-60px mb-5">
                    <img src="~/_CDN/assets/media/svg/files/xml.svg" class="theme-light-show" alt="">
                </div>
                <!--end::Image-->
                <!--begin::Title-->
                <div class="fs-5 fw-bold mb-2">
                    CFDI en XML
                </div>
                <!--end::Title-->
            </a>
            <!--end::Name-->
            <!--begin::Description-->
            <div class="fs-7 fw-semibold text-gray-500">
                @ViewBag.LeyendaXml
            </div>
            <!--end::Description-->
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Card-->
</div>
<!--end::Col-->
<!--begin::Col-->
<div class="col-md-6 col-lg-4 col-xl-3">
    <!--begin::Card-->
    <div class="card h-100 @ViewBag.ClaseDeshabilitarPdf">
        <!--begin::Card body-->
        <div class="card-body d-flex justify-content-center text-center flex-column p-8">
            <!--begin::Name-->
            <a href="@ViewBag.DescargaPdf" class="text-gray-800 text-hover-primary d-flex flex-column">
                <!--begin::Image-->
                <div class="symbol symbol-60px mb-5">
                    <img src="~/_CDN/assets/media/svg/files/pdf.svg" class="theme-light-show" alt="">
                </div>
                <!--end::Image-->
                <!--begin::Title-->
                <div class="fs-5 fw-bold mb-2">
                    CFDI en PDF
                </div>
                <!--end::Title-->
            </a>
            <!--end::Name-->
            <!--begin::Description-->
            <div class="fs-7 fw-semibold text-gray-500">
                @ViewBag.LeyendaPdf
            </div>
            <!--end::Description-->
        </div>
        <!--end::Card body-->
    </div>
    <!--end::Card-->
</div>
<!--end::Col-->
<!--begin::Col-->
<div class="col-md-6 col-lg-4 col-xl-3">
    <!--begin::Card-->
    <div class="card h-100 @ViewBag.ClaseDeshabilitarAdjuntos">
        <!--begin::Card body-->
        <div class="card-body d-flex justify-content-center text-center flex-column p-8">
            <!--begin::Name-->
            <a href="@ViewBag.DescargaAdjuntos" class="text-gray-800 text-hover-primary d-flex flex-column">
